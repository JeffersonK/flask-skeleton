<VirtualHost *:80>
    ServerName {SITE_NAME}
    ServerAlias www.{SITE_NAME}
    ServerAdmin {ADMIN_EMAIL}

    Alias /static {HOME}/web/{SITE_NAME}/public/static
    <Directory {HOME}/web/{SITE_NAME}/public>
        Order allow,deny
        Allow from all
    </Directory>

    WSGIScriptAlias / {HOME}/web/{SITE_NAME}/private/{SITE_NAME}/setup/{APP_NAME}.wsgi

    <Directory {HOME}/web/{SITE_NAME}/private/{SITE_NAME}>
        # Change this to On in development mode
        WSGIScriptReloading Off

        Order deny,allow
        Allow from all
    </Directory>

    DocumentRoot {HOME}/web/{SITE_NAME}/public

    ErrorLog "|/usr/sbin/cronolog {HOME}/web/{SITE_NAME}/log/{APP_NAME}-%Y%m%d.error.log"
    LogLevel warn
    CustomLog "|/usr/sbin/cronolog {HOME}/web/{SITE_NAME}/log/{APP_NAME}-%Y%m%d.access.log" combined

</VirtualHost>

# vim: ft=apache
